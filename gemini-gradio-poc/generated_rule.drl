package rules;

import com.example.Restaurant;
import com.example.Forecast;
import com.example.Staffing;

rule "MediumRestaurantSalesStaffing"
    salience 100
    when
        $restaurant : Restaurant( size == "Medium" )
        $forecast : Forecast( total_sales >= 100, total_sales <= 200 )
        $staffing : Staffing()
    then
        $staffing.setBase_employees(5);
        update($staffing);
        System.out.println("Rule MediumRestaurantSalesStaffing fired for restaurant: " + $restaurant.getName() + " with sales: " + $forecast.getTotal_sales());
end